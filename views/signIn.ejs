<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        注册
      </title>
    <%- include('head',{}) %>
    <style>
        body {
            background: rgba(7, 46, 95, 0.694);
        }

        .layui-form {
            height: 350px;
            width: 400px;
            margin: 0 auto;
            text-align: center;
        }

        .layui-input-block {
            margin: 0;
        }

        .zhuche {
            color: #2b2d2d;
            margin: 20px;
        }

        .span {
            margin: 0 auto;

        }

        .span1 {
            color: rgba(248, 246, 246, 0.7);
        }

        .span1:hover {
            color: rgba(233, 228, 228, 0.7);
        }

        .layui-btn {
            width: 400px;
            background-color: #494c4c;
        }
    </style>
</head>

<body>
    <div class="layui-container">
        <div class="layui-row">
            <form class="layui-form"  action="users/addUser" method="post">
                <h1 class="txt">用户注册</h1>
                <div class="layui-form-item item">
                    <!-- <label class="layui-form-label">用户名</label> -->
                    <div class="layui-input-block">
                        <input type="text" name="userName"  placeholder="请输入账号" autocomplete="off"
                            class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item item">
                    <!-- <label class="layui-form-label">密码</label> -->
                    <div class="layui-input-block">
                        <input type="password" name="password"  placeholder="请输入密码" autocomplete="off"
                            class="layui-input">
                    </div>

                </div>

                <div class="layui-form-item item">
                    <!-- <label class="layui-form-label">密码</label> -->
                    <div class="layui-input-block">
                        <input type="password" name="passwordC" required placeholder="确认密码" autocomplete="off"
                            class="layui-input">
                    </div>

                </div>

                <div class="layui-form-item">
                    <div class="layui-input-block blo">
                        <button class="layui-btn" class="zhuche">注册</button>

                    </div>
                </div>
                <span class="span">已有账号，去<a href="/login" class="span1">登陆</a></span>
            </form>
        </div>
    </div>
</body>

</html>